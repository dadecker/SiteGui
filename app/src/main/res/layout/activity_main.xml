<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="1"
    tools:context=".MainActivity">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:columnCount="6"
            android:orientation="horizontal"
            android:verticalSpacing="20dp">


            <GridLayout
                android:columnCount="3"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_columnSpan="3"
                    android:layout_rowSpan="15"
                    android:textColor="@color/black"
                    android:fontFamily="cursive"
                    android:textFontWeight="500"
                    android:text="Can We Get Your Number?"
                    android:textSize="35dp">


                </TextView>
                <ImageView
                    android:id="@+id/leftSideImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="3"
                    android:layout_rowSpan="20"
                    android:layout_marginRight="30dp"
                    >
                </ImageView>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnCount="3"
                android:orientation="horizontal"
                android:background="@color/royal_blue"
                >
                <TextView
                    android:id="@+id/textVinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:layout_gravity="fill"
                    android:layout_columnSpan="3"
                    android:layout_rowSpan="5"
                    android:textSize="35dp"
                    android:layout_marginTop="5dp"
                    tools:text="Enter Your Phone Number"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:id="@+id/button1"
                    android:text="1"
                    android:layout_columnSpan="1"
                    android:onClick="myClickHandler"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="2"
                    android:id="@+id/button2"
                    android:layout_columnSpan="1"
                    android:onClick="myClickHandler"

                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="3"
                    android:id="@+id/button3"
                    android:layout_columnSpan="1"
                    android:onClick="myClickHandler"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="4"
                    android:id="@+id/button4"
                    android:onClick="myClickHandler"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="5"
                    android:id="@+id/button5"
                    android:onClick="myClickHandler"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="6"
                    android:id="@+id/button6"
                    android:onClick="myClickHandler"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="7"
                    android:id="@+id/button7"
                    android:onClick="myClickHandler"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="8"
                    android:id="@+id/button8"
                    android:onClick="myClickHandler"
                    />

                <Button android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:id="@+id/button9"
                    android:onClick="myClickHandler"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="0"
                    android:id="@+id/button0"
                    android:layout_columnSpan="1"
                    android:onClick="myClickHandler"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="ENTER"
                    android:id="@+id/buttone"
                    android:textColor="@color/green"
                    android:layout_columnSpan="1"
                    android:background="@drawable/enter_button"
                    android:onClick="myClickHandler" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:text="RESET"
                    android:id="@+id/buttonr"
                    android:textColor="@color/red"
                    android:layout_columnSpan="1"
                    android:background="@drawable/button_border"
                    android:onClick="myClickHandler"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_columnSpan="1"
                    android:id="@+id/leftspacelogo"
                    />
                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_rowSpan="5"
                    android:layout_marginTop="20dp"
                    />
            </GridLayout>
        </GridLayout>




</LinearLayout>